<header>
  <div>
    <a href="/">Dogs 4 Life</a>
  </div>
  <nav>
    <a href="/">Home</a>
    <a href="/breeds">Breeds</a>
    <a href="/breeds/search">Find a breed</a>
    {{#if currentUser}}
      <a href="user/favorites">Favorites</a>
    {{/if}}
  </nav>
  <nav>
    {{#if currentUser}}
      <a href="/user/profile">{{currentUser.username}}</a>
      <a href="/logout">Logout</a>
    {{/if}}

    {{#unless currentUser}}
      <a href="/login">Login</a>
      <a href="/signup">Signup</a>
    {{/unless}}
  </nav>
</header>

<div class="terciary-background-div">
  {{#each userFavorites.favorites}}
    <div class="favorite-card">
      <div class="favorite-content">
        <img src={{this.image}} style="height: 200px;" alt="" />
      </div>
      <div class="favorite-content">
        <a href="/breed/{{this._id}}">{{this.name}}</a>
      </div>
    </div>
  {{/each}}
</div>