<header>
  <div>
    <a href="/">Dogs 4 Life</a>
  </div>
  <nav>
    <a href="/">Home</a>
    <a href="/breeds">Breeds</a>
    <a href="/breeds/search">Find a breed</a>
    {{#if currentUser}}
    <a href="/favorites">Favorites</a>
    {{/if}}
  </nav>
  <nav>
    {{#if currentUser}}
      <a href="/profile">{{currentUser.username}}</a>
      <a href="/logout">Logout</a>
    {{/if}}

    {{#unless currentUser}}
      <a href="/login">Login</a>
      <a href="/signup">Signup</a>
    {{/unless}}
  </nav>
</header>
<div class="quatrinary-background-div">
  <div class="quatrinary-box">
    <div>
      <h2>{{breed.name}}</h2>
    </div>
    <div class="breed-box">
      <div class="breed-content">
        <img src={{image}} />
      </div>
      <div class="breed-content">
        <p>Name: {{breed.name}}</p>
        <p>Life Span: {{breed.life_span}}</p>
        <p>Weight: {{breed.weight.metric}} Kg</p>
        <p>Height: {{breed.height.metric}} Cm</p>
        <p>Bred For: {{breed.bred_for}}</p>
        <p>Temperament: {{breed.temperament}}</p>
        {{#if currentUser}}
          <button>Favorite</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>