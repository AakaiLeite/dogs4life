<header>
  <div>
    <p>Dogs 4 Life</p>
  </div>
  <nav>
    <a href="/">Home</a>
    <a href="/breeds">Find a breed</a>
    {{#if currentUser}}
      <a href="/favorites">Favorite Breeds</a>
    {{/if}}
  </nav>
  <nav>
    {{#if currentUser}}
      <a href="/profile">{{currentUser.username}}</a>
      <a href="/logout">Logout</a>
    {{/if}}

    {{#unless currentUser}}
      <a href="/login">Login</a>
      <a href="/signup">Signup</a>
    {{/unless}}
  </nav>
</header>

<div class="main-background-div">
  <div class="main-box">
    <p>Find information and pictures about dog breeds</p>
    {{#unless currentUser}}
    <p><a href="/login">Login</a> or <a href="/signup">Signup</a> to manage Favorite Breeds</p>
    {{/unless}}
    {{#if currentUser}}
      <p>Welcome {{currentUser.username}}</p>
    {{/if}}
  </div>
</div>